{
  "rules": {
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": false,
      "sentence-length": {
        "max": 100
      },
      "ja-no-successive-word": {
        "allow": ["â€¦"]
      }
    },
    "prh": {
      "rulePaths": [
        "./prh.yml"
      ]
    }
  },
  "filters": {
    "comments": true,
    "node-types": {
      "nodeTypes": [
        "Html"
      ]
    },
    "whitelist": {
      "whitelistConfigPaths": [
        "./whitelist/generic.yml",
        "./whitelist/proper-noun.yml",
        "./whitelist/ginata.yml"
      ]
    }
  }
}
