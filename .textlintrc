{
  "rules": {
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": false
    },
    "spellcheck-tech-word": true,
    "prh": {
      "rulePaths": [
        "./prh.yml"
      ]
    }
  },
  "filters": {
    "node-types": {
      "nodeTypes": [
        "Html"
      ]
    },
    "whitelist": {
      "allow": [
        "/\\[https?:.+\\]/g", // はてなブログのリンク用
        "/「.*」/g",
      ]
    }
  }
}
